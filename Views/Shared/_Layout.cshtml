<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- Site-Specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="ArtWorks" asp-action="Index">Art Store</a>

                <!-- Navbar Toggler Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Artworks" ? "active" : "")"
                               asp-controller="Artworks" asp-action="Index">
                                <i class="bi bi-palette"></i> Art Work
                            </a>
                        </li>

                        <!-- Dropdown Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" tabindex="0">
                                <i class="bi bi-gear"></i> Pages
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Artists" asp-action="Index">Our Artists</a>
                                <a class="dropdown-item" asp-controller="Artworks" asp-action="Index">Wall Hanging</a>
                                <a class="dropdown-item" asp-controller="Artworks" asp-action="Index">Sculpture</a>
                                <a class="dropdown-item" asp-controller="Artworks" asp-action="Index">Vessels</a>
                                <a class="dropdown-item" asp-controller="Artworks" asp-action="Index">Kitchen Ware</a>
                            </div>
                        </li>
                    </ul>

                    <!-- Responsive Search Form -->
                    <form class="d-flex" asp-controller="Artist" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control me-2" placeholder="Search" aria-label="Search for artists or artworks">
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Art Store
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Required Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</body>
</html>
